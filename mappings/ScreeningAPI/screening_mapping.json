{
	"mappings": [
		{
			"metadata": {
				"name": "ScreeningAPI /transaction-screening/financial-format with HOLD",
				"description": "Return HOLD and HIT when specific credit IBAN is in the requestbody"
			},
			"priority": 1,
			"request": {
				"method": "POST",
				"urlPathPattern": "/transaction-screening/financial-format",
				"headers": {
					"Content-Type": {
					  "equalTo": "application/json"
					}
				  },
				"bodyPatterns": [
					{
						"matches": ".*NL100SOGETI9999999999.*"
					}
				]
			},
			"response": {
				"status": 200,
				"headers": {
					"Content-Type": "application/json"
				},
				"jsonBody": {
					"financialFormatScreeningResponse": {
						"requestId": "{{{xPath request.body '/financialFormatScreeningRequest/requestHeader/requestId/text()'}}}",
						"businessUnit": "{{{xPath request.body '/financialFormatScreeningRequest/requestHeader/businessUnit/text()'}}}",
						"status": "HOLD",
						"decision": "HIT",
						"screeningId": "WireMock_{{randomValue length=10 type='ALPHANUMERIC'}}"
					}
				}
			}
		
		},
		{
